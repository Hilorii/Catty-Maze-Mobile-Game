<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.LevelCompletePage">
    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label Text="Gratulacje! Ukończyłeś poziom!" 
               FontSize="24" 
               HorizontalOptions="Center" />

        <Button Text="Przejdź do następnego poziomu" 
                Clicked="OnNextLevelClicked" />

        <Button Text="Wyjdź do menu" 
                Clicked="OnExitToMenuClicked" />
    </VerticalStackLayout>
</ContentPage>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.LabyrinthGamePage">
    <Grid Padding="10"
          HorizontalOptions="Center"
          VerticalOptions="Center">
        <GraphicsView x:Name="GameCanvas"
                      Drawable="{Binding Drawable}"
                      HeightRequest="500"
                      WidthRequest="500" />

        <StackLayout Orientation="Horizontal" VerticalOptions="End" Spacing="10">
            <Button Text="↑" Clicked="OnMoveUp" />
            <Button Text="↓" Clicked="OnMoveDown" />
            <Button Text="←" Clicked="OnMoveLeft" />
            <Button Text="→" Clicked="OnMoveRight" />
        </StackLayout>
    </Grid>
</ContentPage>
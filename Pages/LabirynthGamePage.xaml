<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.LabyrinthGamePage">
    <Grid Padding="10"
          HorizontalOptions="Center"
          VerticalOptions="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Wyświetlanie liczby ruchów -->
        <Label x:Name="MovesRemainingLabel"
               Text="Pozostałe ruchy: 0"
               FontSize="18"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               Grid.Row="0" />

        <!-- Graficzne przedstawienie labiryntu -->
        <GraphicsView x:Name="GameCanvas"
                      Drawable="{Binding Drawable}"
                      HeightRequest="500"
                      WidthRequest="500"
                      Grid.Row="1" />

        <!-- Przyciski sterujące -->
        <StackLayout Orientation="Horizontal" VerticalOptions="End" Spacing="10" Grid.Row="2">
            <Button Text="↑" Clicked="OnMoveUp" />
            <Button Text="↓" Clicked="OnMoveDown" />
            <Button Text="←" Clicked="OnMoveLeft" />
            <Button Text="→" Clicked="OnMoveRight" />
        </StackLayout>
    </Grid>
</ContentPage>